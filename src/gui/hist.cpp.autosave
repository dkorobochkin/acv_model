#include "hist.h"
#include "qcustomplot.h"

Hist::Hist(QWidget *parent) :
    QWidget(parent)
{
    resize(500,400);
    setWindowTitle("Histogram");
    customPlot = new QCustomPlot(this);
    vbox = new QVBoxLayout(this);
    
    vbox->addWidget(customPlot);
    setLayout(vbox);
}

void Hist::DrawHist(QVector<double>& mas)
{
